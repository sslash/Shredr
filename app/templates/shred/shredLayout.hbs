<div class="container" data-region="landing">
    <div class="row clearfix">

        <div class="column three-fourth prs rel shred-vid-wrap" data-reg="player"></div>

        <div class="column fourth blue-box pas small vid-thmb-list">

            {{#each things}}

            <!-- brd-dark -->
            <div class="box-wrap row clearfix point" data-evt="thmb-click" data-model="{{_id}}">
                <div class="column third">
                    <img src="{{thumb}}" class="shred-thumb">
                </div>

                <div class="column two-thirds pam">
                    <p class="white">{{title}}</p>
                    <p><small>By {{user.username}}</small></p>
                </div>
            </div>

            {{/each}}

        </div>

    </div>


    <div class="row clearfix">

        <div class="column two-thirds">
            <div class="row mvl clearfix">
                <h5 class="column three-fourth">{{m.type}} <small>Added {{m.createdAt}}</small></h5>
                <div class="column fourth green txt-right phl">
                    <i class="icon ion-social-facebook mvxs"></i>
                    <i class="icon ion-social-twitter mvxs"></i>
                    <i class="icon ion-social-googleplus mvxs"></i>
                </div>
            </div>

            <div class="row mvl clearfix">
                <h1 class="column three-fourth lead">{{m.title}}</h1>
                <div class="column fourth phl">
                    <button class="btn btn-ser">Challenge {{m.user.username}}</button>
                </div>
            </div>

            <div class="row mvl clearfix">

                <!-- TODO: verify this is correct -->
                <section class="mtm green-swabs">
                    <p><a class="white active">About</a>
                    <a>Promote</a>
                    <a>Hide</a></p>
                    <p><label>
                        {{m.description}}
                    </label></p>
                </section>
            </div>

            <div class="row clearfix">
                <h3 class="mvs">Shredr Tabs</h3>
                <div data-reg="tabs" class="prl"></div>
            </div>
        </div>

        <div class="column third">
            <div data-reg="rate"></div>

            <div class="row mvl pam blue-box">
                <div data-reg="comments"></div>
            </div>
        </div>

    </div>
</div>
