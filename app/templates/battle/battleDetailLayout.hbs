        </div>

        <div class="column third">
            <div class="mvl brown-box box-small right clearfix">
                <h4>Related Battles</h4>

                {{#each things}}
                    <div class="brd-dark shred-thumb-wrap le-wrap mvm clearfix" data-mod="{{_id}}" data-evt="rel-bat">
                        <div class="crop">
                            <img src="http://img.youtube.com/vi/GcGl_UGEarc/0.jpg" class="shred-thumb">
                        </div>
